<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uptextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:text="Location Name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/uptxtlocationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Enter location Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Email"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/uptxtMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Enter Your Email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Lamps"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnerLamps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/lamps"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Cups And Plates"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnerCups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cups"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Mallet Hammer"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnerHammer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/hammer"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="How Many Tables"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnerTables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tables"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Mobile Gas Device"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnerGas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gas"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Date"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <EditText
                android:id="@+id/uptxtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="month/date/year"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/uptextView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Enter your tent size"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnertentSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tentSize"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/uptextView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="How many tents do you need"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/upspinnertentNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tentNumber"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D538AE05"
                android:text="Update"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D5CF0A0A"
                android:text="Delete"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>